#!/bin/bash -e

cflags=CFLAGS="$CFLAGS"
cxxflags=CXXFLAGS="$CXXFLAGS"
declare -a args
j=0
for i in "$@"; do
    case "$i" in
        CFLAGS=*)
            cflags="$i";;
        CXXFLAGS=*)
            cxxflags="$i";;
	*)
	    args[$j]="$i"
	    j=$((j+1))
    esac
done

export "$cflags" "$cxxflags"
set -x
exec meson build "${args[@]}"
